{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/db/*": ["./src/db/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/components/*": ["./src/components/*"],
      "@/theme/*": ["./src/theme/*"],
      "@/api-utils/*": ["./src/api-utils/*"],
      "@/images/*": ["./public/images/*"],
      "@/features/*": ["./src/features/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "pages/**/*"]
}
